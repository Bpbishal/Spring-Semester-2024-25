
@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>
@if (TempData["Msg"]!= null)
            {
                <p class="alert alert-success">@TempData["Msg"]</p>
            }
<a href="/Student/Create">Create</a>

@if (Model.Count != 0)
            {
                <table class="table table-bordered">
                    <tr>
                        <th>Name</th>
                        <th>ID</th>
                        <th>DOB</th>
                        <th>CGPA</th>

                    </tr>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Name</td>
                           <td>@s.id</td>
                            <td>@s.Dob.ToString("MMMM dd,yyyy")</td>
                            <td>@s.Cgpa</td>
                            <td>
                                <a href="/Student/Edit/@s.id" class="btn btn-primary">Edit</a>
                                <a href="/Student/Delete/@s.id"class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }


                </table>                        
            }
else
            {
                <h4>No data</h4>
            }
